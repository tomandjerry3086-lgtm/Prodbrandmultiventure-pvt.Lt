// SAVE CONTACT (LOCAL STORAGE DEMO)
function saveContact(){
let contacts = JSON.parse(localStorage.getItem("contacts")) || [];
contacts.push({
name:document.getElementById("name").value,
email:document.getElementById("email").value,
message:document.getElementById("message").value
});
localStorage.setItem("contacts",JSON.stringify(contacts));
alert("Message Saved Successfully!");
}

// LOGIN DEMO
function login(){
if(document.getElementById("adminPass").value==="admin123"){
document.getElementById("adminPanel").style.display="block";
loadData();
}else{
alert("Wrong Password");
}
}

// LOAD DASHBOARD DATA
function loadData(){
let contacts = JSON.parse(localStorage.getItem("contacts")) || [];
let html="";
contacts.forEach((c,i)=>{
html+=`<p><b>${i+1}.</b> ${c.name} | ${c.email} | ${c.message}</p>`;
});
document.getElementById("data").innerHTML=html;
}

// RAZORPAY DEMO
function payNow(){
var options={
key:"YOUR_RAZORPAY_KEY",
amount:50000,
currency:"INR",
name:"ProdBrand Multiventure Pvt Ltd",
description:"Service Payment",
handler:function(response){
alert("Payment Successful!");
}
};
var rzp=new Razorpay(options);
rzp.open();
}

// AI CHATBOT DEMO
function chat(){
let msg=document.getElementById("chatInput").value;
document.getElementById("chatOutput").innerText=
"AI Demo Response: Thank you for your message about '"+msg+"'. Our team will respond shortly.";
}

